.infoBar
  position absolute
  top 0px
  right 0px
  bottom 0px
  width 340px
  background ColorGreyBg
  border-left 1px solid darken(ColorGreyBg, 10%)
  padding-left 15px
  padding-right 15px

  h2
    color ColorHeading
    overflow hidden
    width 100%
    white-space nowrap
    text-overflow ellipsis
  .ageHistogram
    width 100%
    height 90px
    position relative
    .field
      width (100 / 15)%
      background ColorRadiozurnal
      border 1px solid lighten(ColorRadiozurnal, 50%)
      border-bottom 0px none
      min-height 1px
      position absolute
      bottom 0px
    .legend
      color lighten(black, 40%)
      font-size 0.7em
      position absolute
      left 20px
      bottom -20px
      margin-left -6px
    for i in (1 .. 15)
      .field:nth-child({i})
        left ((i - 1) * (100 / 15))%

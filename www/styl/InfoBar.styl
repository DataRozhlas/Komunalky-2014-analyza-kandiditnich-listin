.infoBar
  position absolute
  top 0px
  right 0px
  bottom 0px
  width 330px
  background lighten(ColorGreyBg, 80%)
  border-left 1px solid lighten(ColorGreyBg, 30%)
  padding-left 15px
  padding-right 15px

  h2
    color ColorHeading
    overflow hidden
    width 100%
    white-space nowrap
    text-overflow ellipsis
    margin 15px 0px 5px 0px
  .clickInvite
    margin 9px 0px 0px 0px
    color lighten(black, 40%)
    font-style italic
  h3
    margin 15px 0px 10px 0px
    &.genderH
      margin-top 33px
    // &.titulyH
    //   margin-top 45px
  .stats
    float left
    margin-top 40px
    margin-left -15px
    width (@width - 1px)
    > div
      float left
      text-align center
      width 26%
      margin-bottom -5px
      height 45px
      &:nth-child(2)
        border-left 1px solid #b
        border-right 1px solid #b
      &:last-child
        width 48%
      h4
        margin 0px
        margin-bottom 10px
        margin-top -5px
        font-weight normal
        color #3
      span.value
        float left
        display block
        width 100%
        margin-top 3px
        font-size 1.8em

  .ageHistogram
    width 100%
    height 90px
    position relative
    margin-bottom 30px
    .field
      width (100 / 15)%
      background ColorRadiozurnal
      border 1px solid lighten(ColorRadiozurnal, 50%)
      border-bottom 0px none
      min-height 1px
      position absolute
      bottom 0px
      transition height 0.1s
      .legend
        color lighten(black, 40%)
        font-size 0.7em
        position absolute
        left 0px
        bottom -20px
        margin-left -6px
      &:first-child .legend
        margin-left -3px

    for i in (1 .. 15)
      .field:nth-child({i})
        left ((i - 1) * (100 / 15))%
  .gender
    width 100%
    background #3288bd
    height 30px
    position relative
    margin-bottom 30px
    border-radius 4px
    .genderFill
      position absolute
      right 0px
      height 30px
      background #c51b7d
      border-top-right-radius 4px
      border-bottom-right-radius 4px
      transition width 0.1s
    .center
      position absolute
      margin-left -6px
      bottom -10px
      left 50%
      triangle 12px, 7px, 'top', lighten(black, 60%)
    .center-text
      position absolute
      bottom -28px
      font-size 0.7em
      color lighten(black, 40%)
      left 50%
      text-align center
      width 50px
      margin-left -25px

  .tituly
    width 100%
    height 30px
    background #a
    border-radius 4px
    overflow hidden
    .field
      float left
      height 30px
      transition width 0.1s
  .titulLegend
    margin-top 9px
    .item
      position relative
      float left
      width 73px
      padding-left 29px
      height 20px
      .legendBg
        display block
        width 20px
        height 8px
        position absolute
        top 5px
        left 0px
      &:last-child
        width 150px
  .tituly
  .titulLegend
    .ing
      background #E41A1C
    .mgr
      background #377EB8
    .mudr
      background #4DAF4A
    .judr
      background #984EA3
    .rsdr
      background #FF7F00
    .bez
      background #a
    .jiny
      background #FF3
  &.noData
    h3
    .titulLegend .text
    .stats h4
    .stats .value
    .ageHistogram .field .legend
    .gender .center-text
      color #b
    .gender
    .tituly
    .titulLegend .legendBg
    .ageHistogram .field
      background #ddd
      border-color #ddd
    .gender .center
      triangle 12px, 7px, 'top', #ddd

